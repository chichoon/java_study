<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/BottomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/MyViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:backgroundTint="#FFFFFF"
        android:gravity="top"
        android:orientation="vertical">
        <com.example.a1001.MyView
            android:id="@+id/MyViewWidget"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ControlPanelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@android:color/darker_gray"
        android:gravity="bottom"
        android:orientation="vertical"> <LinearLayout
    android:id="@+id/ShowLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:orientation="horizontal"> <Button
    android:id="@+id/ShowButton"
    android:layout_width="300px"
    android:layout_height="wrap_content"
    android:text="Show Figure"
    android:textSize="15px" />
</LinearLayout> <LinearLayout
    android:id="@+id/ControlLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:orientation="horizontal"> <Button
    android:id="@+id/UpButton"
    android:layout_width="140px"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:text="Up"
    android:textSize="9dp" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/ControlLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"> <Button
        android:id="@+id/LeftButton"
        android:layout_width="140px"
        android:layout_height="wrap_content"
        android:text="Left"
        android:textSize="9dp" /> <Button
        android:id="@+id/CenterButton"
        android:layout_width="140px"
        android:layout_height="wrap_content"
        android:text="Center"
        android:textSize="9dp" /> <Button
        android:id="@+id/RightButton"
        android:layout_width="140px"
        android:layout_height="wrap_content"
        android:text="Right"
        android:textSize="9dp" />
    </LinearLayout> <LinearLayout
    android:id="@+id/ControlLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:orientation="horizontal"> <Button
    android:id="@+id/DownButton"
    android:layout_width="140px"
    android:layout_height="wrap_content"
    android:text="Down"
    android:textSize="9dp" />
</LinearLayout>
        <LinearLayout
            android:id="@+id/TextLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"> <EditText
            android:id="@+id/EditTextWidget"
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="@android:color/holo_purple"
            android:textSize="17px" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>